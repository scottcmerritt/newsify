<div class="d-inline-block text-center">
<% Community::Voting::VOTESCOPES.each do |vote_scope| %>
	<div class="d-inline-block p-1 border mx-1">
	<%= vote_scope %> <span class="font-weight-bold"><%= user.auditable.send("cached_weighted_#{vote_scope}_average") %></span>
	</div>
<% end %>
<div class="p-1">
<% user.vote_quality_score.as_json[0].each do |k,v| %>
<% text = k.humanize.downcase.split("cached").nil? ? k.humanize : k.humanize.downcase.split("cached")[1] %>
<% unless v.nil? %>
	<div class="d-inline-block border px-1 mr-1 me-1">
		<%= text %> <span class="font-weight-bold"><%= v %></span>
	</div>
	<% end %>
	<% end %>


	<% if false %>
		<% user.vote_quality_scores.each do |score| %>
		<%= score.cached_votes_total %>

		<% vote_score_cols.each do |col| %>
		<div>
		<%= col %>: <%= score.send(col) %>
		</div>
		<% end %>
		<%= score %>
	<% end %>
<% end %>
</div>
</div>