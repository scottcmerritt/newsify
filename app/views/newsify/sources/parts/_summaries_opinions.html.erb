<% style_wrap = "" if (local_assigns[:style_wrap].nil?) %>
<% style_body = "overflow-y: scroll;height: 300px;" %>
<div class="card" >

<div class="card-body">
  <h5 class="card-title">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="summaries-tab" data-toggle="tab" href="#summaries" data-bs-toggle="tab" data-bs-target="#summaries" role="tab" aria-controls="home" aria-selected="true">Summaries</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="opinions-tab" data-toggle="tab" href="#opinions" data-bs-toggle="tab" data-bs-target="#opinions" role="tab" aria-controls="opinions" aria-selected="false">Opinions</a>
    </li>
  </ul>
  </h5>
  <div class="card-text" style="<%= style_body %>">

  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active px-2" id="summaries" role="tabpanel" aria-labelledby="summaries-tab">
      <%= render partial: "newsify/sources/parts/summaries" %>
    </div>
    <div class="tab-pane fade" id="opinions" role="tabpanel" aria-labelledby="opinions-tab">
      <%= render partial: "newsify/sources/parts/opinions" %>
    </div>
  </div>
  </div>
</div>
  <div class="card-footer">#</div>
</div>